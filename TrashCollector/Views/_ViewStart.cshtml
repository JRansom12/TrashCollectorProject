@{
    if (this.User.IsInRole("Customers"))
    {
        Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    }
    else if (this.User.IsInRole("Employees"))
    {
        Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}